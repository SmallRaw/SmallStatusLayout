<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smallraw.smallrawstatelayout.simple">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmallStatusLayout">
        <activity android:name=".ViewInjectStatusActivity" />
        <activity android:name=".ViewStatusActivity" />
        <activity android:name=".ActivityInjectStatusActivity" />
        <activity android:name=".InjectFragmentActivity" />
        <activity android:name=".ViewBindingInjectFragmentActivity" />
        <activity android:name=".RecyclerViewInjectStatusActivity" />
        <activity android:name=".CustomStatusActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>